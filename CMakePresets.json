{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "armgcc-default",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/tools/cmake/armgcc-toolchain.cmake"
            },
            "hidden": true
        },
        {
            "name": "armgcc-release-unix",
            "inherits": "armgcc-default",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "armgcc-release-mingw",
            "inherits": "armgcc-default",
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "mingw-default",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/tools/cmake/mingw-toolchain.cmake"
            },
            "hidden": true
        },
        {
            "name": "mingw-debug",
            "inherits": [ "mingw-default" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "gcc-default",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/tools/cmake/gcc-toolchain.cmake"
            },
            "hidden": true
        },
        {
            "name": "gcc-debug",
            "inherits": [ "gcc-default" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-example",
            "targets": [ "atsame54-example" ],
            "hidden": true
        },
        {
            "name": "build-example-unix",
            "inherits": "build-example",
            "configurePreset": "armgcc-release-unix"
        },
        {
            "name": "build-example-mingw",
            "inherits": "build-example",
            "configurePreset": "armgcc-release-mingw"
        },
        {
            "name": "build-test",
            "targets": [ 
                "atsame54-hal-unittest",
                "atsame54-xplained-inttest"
            ],
            "hidden": true
        },
        {
            "name": "build-test-unix",
            "inherits": "build-test",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "build-test-mingw",
            "inherits": "build-test",
            "configurePreset": "mingw-debug"
        }
    ],
    "testPresets": [
        {
            "name": "test-local",
            "output": {
                "outputOnFailure": true
            },
            "hidden": true
        },
        {
            "name": "test-local-unix",
            "inherits": "test-local",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "test-local-mingw",
            "inherits": "test-local",
            "configurePreset": "mingw-debug"
        }
    ]
}